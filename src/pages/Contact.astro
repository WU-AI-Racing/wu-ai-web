<style>
  /* --- Base styles from your other pages --- */
  main {
    font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans',
      Arial, sans-serif;
    display: flex;
    justify-content: center;
    padding-bottom: 5rem;
  }

  #hero {
    display: flex;
    align-items: start;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
    max-width: 70ch; /* Keeps text readable */
  }

  h2 {
    font-size: 22px;
    margin-top: 1.5em;
    margin-bottom: 0.25em;
    font-weight: normal;
    /* DELETED: color: #111827; */
  }

  h2:first-of-type {
    margin-top: 0;
  }

  p {
    /* DELETED: color: #4b5563; */
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.006em;
    margin: 0;
    margin-bottom: 1em;
  }

  /* --- Styles for this page --- */

  /* Style the contact info block */
  p strong {
    /* DELETED: color: #111827; */
    font-weight: 600;
  }

  p em {
    /* DELETED: color: #6b7280; */
    /* You can optionally add a lighter color here if you want */
    /* color: #9ca3af; */ 
  }

  /* Style the email link (and other text links) */
  #hero a:not(.button) {
    color: #3245ff; /* This blue should be fine on a dark background */
    text-decoration: none;
    font-weight: 500;
  }

  #hero a:not(.button):hover {
    text-decoration: underline;
  }
  
  /* Added the social-link styles from our previous chat */
  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #3245ff;
    text-decoration: none;
    font-weight: 500;
    margin-top: 4px;
  }

  .social-link:hover {
    text-decoration: underline;
  }

  .social-link svg {
    stroke: currentColor;
  }
  
  /* --- Button style (copied from teams.astro) --- */
  .button {
    display: inline-block;
    padding: 12px 18px;
    color: white;
    text-decoration: none;
    background: linear-gradient(85deg, #000000 40%, #cc0000 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 10px;
    transition: all 0.2s;
  }

  .button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
    transform: translateY(1px); /* Simple press effect */
  }

  /* --- Mobile styles --- */
  @media screen and (max-width: 768px) {
    #hero {
      display: block;
      padding-top: 10%;
    }

    h2 {
      line-height: 1.5;
    }
  }
</style>