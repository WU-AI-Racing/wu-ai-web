<style>
  /* --- Base styles from your other pages --- */
  main {
    font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans',
      Arial, sans-serif;
    display: flex;
    justify-content: center;
    padding-bottom: 5rem;
  }

  #hero {
    display: flex;
    align-items: start;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
    max-width: 70ch; /* Keeps text readable */
    width: 100%;
  }

  h2 {
    font-size: 22px;
    margin-top: 1.5em;
    margin-bottom: 0.25em;
    font-weight: normal;
  }

  h2:first-of-type {
    margin-top: 0;
  }

  p {
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.006em;
    margin: 0;
    margin-bottom: 1em;
  }

  /* --- Styles for this page --- */

  p strong {
    font-weight: 600;
  }

  #hero a:not(.button):not(.social-link) {
    color: #3245ff;
    text-decoration: none;
    font-weight: 500;
  }

  #hero a:not(.button):not(.social-link):hover {
    text-decoration: underline;
  }
  
  /* Social Link Styles */
  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #3245ff;
    text-decoration: none;
    font-weight: 500;
    margin-top: 4px;
  }

  .social-link:hover {
    text-decoration: underline;
  }
  
  /* Button style */
  .button {
    display: inline-block;
    padding: 12px 18px;
    color: white;
    text-decoration: none;
    background: linear-gradient(85deg, #000000 40%, #cc0000 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
    border-radius: 10px;
    transition: all 0.2s;
  }

  .button:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
    transform: translateY(1px);
  }

  /* --- NEW SPONSOR GRID STYLES --- */
  .subsection-header {
    font-size: 1.1rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #888; /* Slightly muted header */
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .sponsor-grid {
    display: grid;
    /* This creates a responsive grid that fits as many 180px cards as possible */
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 1rem;
    width: 100%;
    margin-bottom: 1rem;
  }

  .sponsor-card {
    background-color: #1a1a1a;
    border: 1px solid #333;
    border-radius: 12px;
    padding: 1rem;
    text-align: center;
    transition: transform 0.2s;
  }

  .sponsor-card:hover {
    transform: translateY(-3px);
  }

  .sponsor-card img {
    width: 100%;
    aspect-ratio: 3/2; /* Rectangular aspect ratio for logos */
    object-fit: contain;
    background-color: white; /* White bg to make logos pop */
    border-radius: 8px;
    padding: 10px;
    margin-bottom: 0.5rem;
    display: block;
  }

  .sponsor-card h4 {
    font-size: 0.9rem;
    font-weight: 600;
    margin: 0.5rem 0 0 0;
    color: #f3f4f6;
  }

  /* --- Mobile styles --- */
  @media screen and (max-width: 768px) {
    #hero {
      display: block;
      padding-top: 10%;
    }

    h2 {
      line-height: 1.5;
    }
  }
</style>